{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"charset": "utf8",
		"allowJs": true,
		"checkJs": true,
		"declaration": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": ["es2020", "DOM"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "build",
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2015",
		"typeRoots": ["./@types"]
	},
	"include": [
		"**/src/**/*.ts",
		"**/src/**/*.tsx",
	]
}